<Window x:Class="Chatbot1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatbot1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Schreibbox" HorizontalAlignment="Left" Height="30" Margin="47,332,0,0" TextWrapping="Wrap" Text="Deine Nachricht" VerticalAlignment="Top" Width="613" RenderTransformOrigin="0.505,0.476" FontSize="16"/>
        <Button x:Name="Send" Content="Send" HorizontalAlignment="Left" Margin="683,332,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="Send_Click"/>
        <TextBox x:Name="Chat" HorizontalAlignment="Left" Height="269" Margin="47,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="711" IsReadOnly="True" TextChanged="Chat_TextChanged"/>

    </Grid>
</Window>
